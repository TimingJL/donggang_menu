<div class="row" id="show-box">
  <div class="col-md-6 col-md-offset-3">
    <div class="box">
      <div class="panel panel-default">
        <div class="panel-body">
          <h1>
            Log in
          </h1>
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <%= f.error_notification %>
            <%= f.input :email, required: true, autofocus: true, input_html: { class: 'form-control' } %>            
            <%= f.input :password, required: false, input_html: { class: 'form-control' } %>

            <%= f.input :remember_me, input_html: { class: 'form-control' }, as: :boolean if devise_mapping.rememberable? %>
            <div class="form-actions">
              <%= f.button :submit, "Log in" %>
            </div>
          <% end %>
        </div>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>

