<tr>
  <td>
		<strong><%= User.find(comment.user_id).username %></strong>
  </td>
  <td>
		<p class="comment_body"><%= comment.content %></p>
		<p class="comment_time"><%= time_ago_in_words(comment.created_at) %> Ago</p>
  </td>
  <td>
  <% if user_signed_in? %>
      <% if current_user.admin == true || current_user.id == comment.user_id %> 
        <div class="dropdown">
          <div id="menu1" data-toggle="dropdown">
          	<a href="#" style="background:white;"><li class="fa fa-sort-desc fa-2x" aria-hidden="true"></li></a>
          </div> 
              <ul class="dropdown-menu" role="menu" aria-labelledby="menu1">
                <li>
          		      <%= link_to 'Delete', [comment.restaurant, comment],method: :delete,class: "button",data: { confirm: 'Are you sure?' } %>
          		  </li>    
              </ul>  
        </div>
      <% end %>
  <% end %> 
  </td>  
</tr>     
