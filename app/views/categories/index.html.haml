#show-box.row
	.col-md-6.col-md-offset-3
		.box
			.panel.panel-default
				.panel-body
					%h1 Category List
					- @categories.each do |category|
						%h2= category.name
						%p
							Publish at
							= category.created_at.strftime('%b %d, %Y')
							.btn-group
								= link_to "Edit", edit_category_path(category), class: "btn btn-info btn-xs"
								= link_to 'Delete', category, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs"


					= link_to "New Category", new_category_path