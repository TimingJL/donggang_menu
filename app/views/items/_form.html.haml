



= simple_form_for ([@restaurant, @restaurant.items.build]), html:{multipart: true} do |f|
    .panel-body
        = f.input :name, input_html: { class: 'form-control' }
        = f.input :price, input_html: { class: 'form-control' }
        = f.input :imageURL, input_html: { class: 'form-control' }
        = f.input :note, input_html: { class: 'form-control' }
        = f.input :vegetarian, input_html: { class: 'form-control' }
    = f.button :submit, class: 'btn btn-success'


