<p id="notice"><%= notice %></p>

<p>
  <strong>Image:</strong>
  <% if @restaurant.imageURL.present? %>
    <%= link_to (image_tag @restaurant.imageURL , width: '100%'), @restaurant %>
  <% elsif restaurant.image.present? %>
    <%= link_to (image_tag @restaurant.image.url(:small) , width: '100%'), @restaurant %>
  <% else %>
    <%= link_to @restaurant.name, restaurant %>
  <% end %>  
</p>
  
<p>
  <strong>Name:</strong>
  <%= @restaurant.name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @restaurant.address %>
</p>

<p>
  <strong>Phone1:</strong>
  <%= @restaurant.phone1 %>
</p>

<p>
  <strong>Phone2:</strong>
  <%= @restaurant.phone2 %>
</p>

<p>
  <strong>Imageurl:</strong>
  <%= @restaurant.imageURL %>
</p>

<p>
  <strong>Note:</strong>
  <%= @restaurant.note %>
</p>

<p>
  <strong>Vegetarian:</strong>
  <%= @restaurant.vegetarian %>
</p>

