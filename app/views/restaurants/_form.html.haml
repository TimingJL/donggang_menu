= simple_form_for @restaurant, html:{multipart: true} do |f|
    - if @restaurant.errors.any?
        %p
            = pluralize(@restaurant.errors.count, "error")
            prohibited this restaurant from being saved
        %ul
            - restaurant.errors.full_messages.each do |message|
                %li= message

    .panel-body
        = f.input :name, input_html: { class: 'form-control' }
        = f.input :imageURL, input_html: { class: 'form-control' }
        = f.input :address, input_html: { class: 'form-control' }
        = f.input :phone1, input_html: { class: 'form-control' }
        = f.input :phone2, input_html: { class: 'form-control' }       
        = f.input :note, input_html: { class: 'form-control' }
        = f.input :vegetarian, input_html: { class: 'form-control' }
    = f.button :submit, class: "btn btn-primary"
